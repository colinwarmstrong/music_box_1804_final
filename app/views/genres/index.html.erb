<h1>Genres</h1>
<% @genres.each do |genre| %>
  <%= link_to genre.name, genre_path(genre) %>
<% end %>

<section class='new-genre-form'>
  <% if current_admin? %>
    <h3>Create New Genre</h3>
    <%= form_for @genre do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.submit %>
    <% end %>
  <% end %>
</section>
